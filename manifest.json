{
    "manifest_version": 3,
    "name": "AI Chat Assistant",
    "version": "1.0",
    "description": "Enhance AI chat platforms with prompt perfection, grammar checking, and summarization tools",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://gemini.google.com/*",
      "https://bard.google.com/*",
      "https://chat.mistral.ai/*",
      "https://www.perplexity.ai/*",
      "https://poe.com/*",
      "https://copilot.microsoft.com/*",
      "https://you.com/*",
      "https://character.ai/*",
      "https://generativelanguage.googleapis.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://chatgpt.com/*",
          "https://claude.ai/*",
          "https://gemini.google.com/*",
          "https://bard.google.com/*",
          "https://chat.mistral.ai/*",
          "https://www.perplexity.ai/*",
          "https://poe.com/*",
          "https://copilot.microsoft.com/*",
          "https://you.com/*",
          "https://character.ai/*"
        ],
        "js": ["config.js", "content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "AI Chat Assistant Settings"
    },
    "web_accessible_resources": [
      {
        "resources": [".env"],
        "matches": ["<all_urls>"]
      }
    ]
  }